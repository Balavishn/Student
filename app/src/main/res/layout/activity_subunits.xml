<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Academic.Subjects.Studycontent.Subunits">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textsub1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:hint="sujects"
                android:src="@drawable/editprofileicon"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textcl1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:hint="Class"
                android:src="@drawable/editprofileicon"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textunis1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:hint="units"
                android:src="@drawable/editprofileicon"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/pdf_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pdf_subject" />

        <Button
            android:id="@+id/video_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="video_subject" />


    </LinearLayout>

</LinearLayout>